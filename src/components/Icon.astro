---
interface Props {
    nameStaff: string,
    img: string
}

const {nameStaff, img} = Astro.props
---
<div>
    <div class="w-44 h-44 flex items-center justify-center bg-white overflow-hidden rounded-full p-2">
        <div class="w-40 h-40 rounded-full bg-cover bg-center" style=`background-image: url("${img}")`></div>
    </div>
    <h2 class="text-2xl font-semibold">{nameStaff}</h2>
</div>
